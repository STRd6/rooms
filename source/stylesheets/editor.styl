.item
  pointer-events auto

.editor
  height 100%
  width 100%

  pointer-events none

.itemPalette
  position absolute
  left 0
  top 0

  overflow hidden
  width 128px
  z-index 1

.itemContainer
  border-radius 4px
  background-color white
  display inline-block
  margin 4px
  padding 4px

.toolbar
  bottom 0
  left 0

  display inline-block

  height 40px

  padding 4px
  position absolute

.tool
  border-color transparent
  border-width
  display inline-block

  height 32px
  width 32px

  &:active
    border-color blue

.trash
  background-image url("/images/dumper.png")
  background-size 100%
  position absolute
  bottom 0
  right 0

  width 100px
  height 100px
